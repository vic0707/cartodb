<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('assets/background.jpg');">
	<div class="banner-content">
		<h1>Predict Through Location</h1>
		<div class="container">
			<div class="row">
				<%= simple_form_for :user, url: search_path, method: 'post' do |f| %>
				<div class="col-xs-12 col-md-3 col-md-offset-2">
					<%= f.input :username %>
				</div>
				<div class="col-xs-12 col-md-3">
					<%= f.input :table %>
				</div>
				<div class="col-xs-12 col-md-2">
					<%= f.button :submit, class: "btn btn-primary btn-lg", label: "Load data" %>
				</div>
				<% end %>
			</div>
		</div>
		<%#= link_to "Load Data", search_path, class: "btn btn-primary btn-lg"%>
		<!-- <a class="btn btn-primary btn-lg">Load Data</a> -->
	</div>
</div>